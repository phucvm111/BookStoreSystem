<Window x:Class="BookManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - FU Bookstore"
        Height="400" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f2f2f2">

    <Border CornerRadius="10" Padding="20" Background="White" Margin="20" BorderBrush="#ccc" BorderThickness="1">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" >
            <TextBlock Text="Login to FU Bookstore" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" />

            <TextBlock Text="Email" Margin="0,0,0,5" />
            <TextBox Name="txtEmail" Height="30" />

            <TextBlock Text="Password" Margin="0,15,0,5" />
            <PasswordBox Name="txtPassword" Height="30" />

            <Button Content="Login" Height="35" Margin="0,25,0,0" Background="#3F51B5" Foreground="White"
                    Click="Login_Click" FontWeight="Bold" />
        </StackPanel>
    </Border>
</Window>
